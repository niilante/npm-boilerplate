{
  "name": "modern-npm-boilerplate",
  "version": "1.0.0",
  "description": "a modern boilerplate for npm things with wings",
  "author": "Gregor Adams <greg@pixelass.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixelass/npm-boilerplate.git"
  },
  "keywords": [
    "npm",
    "boilerplate",
    "yarn"
  ],
  "bugs": {
    "url": "https://github.com/pixelass/npm-boilerplate/issues"
  },
  "homepage": "https://github.com/pixelass/npm-boilerplate#readme",
  "license": "MIT",
  "devPort": 3000,
  "main": "lib/index.js",
  "scripts": {
    "babel": "babel src --out-dir lib",
    "build": "NODE_ENV=production node ./scripts/build",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "report": "nyc report --reporter=html",
    "docs": "rm -rf docs/api && mkdir docs/api && jsdoc -c jsdoc.json",
    "lint": "npm run eslint; npm run stylelint",
    "stylelint": "stylelint {demo,src}/**/*.{css,less,scss}",
    "eslint": "xo {demo,src}/**/*.js",
    "prepush": "npm test",
    "prerelease": "npm run babel; npm test",
    "posttest": "npm run lint",
    "release": "standard-version --no-verify",
    "server": "node ./scripts/serve",
    "dev": "node ./scripts/dev",
    "start": "npm run build && npm run server",
    "test": "nyc ava --tap | tap-nyan",
    "watch": "NODE_ENV=development node ./scripts/watch"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "coveralls": "^2.11.16",
    "cz-conventional-changelog": "^2.0.0",
    "errorify": "^0.3.1",
    "hopsdoc": "^0.1.7",
    "http-server": "^0.9.0",
    "husky": "^0.13.2",
    "jsdoc": "^3.4.3",
    "log": "^1.4.0",
    "standard-version": "^4.0.0",
    "stylelint": "^7.9.0",
    "stylelint-config-standard": "^16.0.0",
    "tap-nyan": "^1.1.0",
    "watchify": "^3.9.0",
    "xo": "^0.17.1"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "xo": {
    "space": true,
    "semicolon": false
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 2,
      "number-leading-zero": null
    }
  },
  "ava": {
    "files": [
      "src/**/spec/*.js"
    ],
    "source": [
      "src/**/*.js"
    ],
    "presets": [
      "@ava/stage-4",
      "@ava/transform-test-files"
    ],
    "failFast": true,
    "tap": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "dependencies": {
    "nyc": "^10.1.2"
  }
}
